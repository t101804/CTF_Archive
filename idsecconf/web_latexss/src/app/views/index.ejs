<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ask Astolfo Anything!</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.colors.min.css"
    />
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <div class="container">
      <br />
      <div class="answer-container" style="align-items: center">
        <img
          style="width: 5em; height: 5em"
          src="/astolfo.webp"
          alt="Astolfo's pfp"
          class="profile-picture"
        />
        <h1 style="margin-left: 0.25em">AAA - Ask Astolfo Anything!</h1>
      </div>
      <br />
      <form action="/ask" method="POST">
        <textarea
          name="content"
          placeholder="Ask your question here..."
          required
        ></textarea>
        <button
          type="submit"
          style="background-color: var(--pico-color-pink-400)"
        >
          Submit Question
        </button>
      </form>
      <% if (astolfoToken) { %>
      <h2>Recent Questions:</h2>
      <ul>
        <% questions.forEach((question) => { %>
        <li>
          <a href="/question/<%= question.id %>"
            ><%= question.content.substring(0, 50) %>...</a
          >
          <%= question.is_answered ? '(Answered)' : '' %>
        </li>
        <% }); %>
      </ul>
      <% } %>
    </div>
  </body>
</html>
